<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/holland_fl"
    android:layout_width="@dimen/personality_card_width"
    android:layout_height="@dimen/personality_card_height"
    android:layout_gravity="center"
    android:layout_marginBottom="8dp"
    android:background="@drawable/layer_card_background"
    android:paddingBottom="2dp"
    android:paddingLeft="1dp"
    android:paddingRight="1dp"
    android:paddingTop="1dp">

    <RelativeLayout
        android:layout_width="@dimen/personality_card_width"
        android:layout_height="@dimen/personality_card_height"
        android:focusable="false"
        android:focusableInTouchMode="false">

        <ImageView
            android:id="@+id/holland_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:scaleType="centerCrop"
            android:src="@drawable/holland1" />

        <CheckBox
            android:id="@+id/holland_cb"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="4dp"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false" />

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:background="#2f2f2f"
            android:focusable="false"
            android:focusableInTouchMode="false">

            <TextView
                android:id="@+id/holland_tv"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:paddingRight="4dp"
                android:textColor="#AFAFAF"
                android:textSize="14dp" />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>

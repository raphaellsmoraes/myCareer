<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/holo_dark_gray">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:background="@drawable/layer_card_background">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <!-- Imageview card Layout -->
                    <FrameLayout
                        android:id="@+id/fl_trending_card_profession"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp">

                            <ImageView
                                android:id="@+id/iv_trending_card_profession"
                                android:layout_width="wrap_content"
                                android:layout_height="200dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/computer_science" />

                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="1dp"
                                android:layout_below="@+id/iv_trending_card_profession"
                                android:background="#424242" />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/headline_font_size"
                            android:textColor="#f5f5f5"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="@dimen/title_align"
                            android:layout_marginBottom="16dp"
                            android:text="Computer Engineering" />
                    </FrameLayout>

                    <!-- Card description Layout -->
                    <TextView
                        android:id="@+id/card_caption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="@dimen/title_align"
                        android:textSize="@dimen/caption_font_size"
                        android:textColor="#bdbdbd"
                        android:layout_below="@+id/fl_trending_card_profession"
                        android:text="Caption Teste" />

                    <TextView
                        android:id="@+id/card_subcaption1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="@dimen/title_align"
                        android:textSize="@dimen/caption_font_size"
                        android:textColor="#212121"
                        android:layout_below="@+id/card_caption"
                        android:text="Sub Caption" />

                    <TextView
                        android:id="@+id/card_subcaption2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="@dimen/title_align"
                        android:layout_marginRight="@dimen/title_align"
                        android:layout_marginBottom="8dp"
                        android:textSize="@dimen/caption_font_size"
                        android:textColor="#212121"
                        android:layout_below="@+id/card_subcaption1"
                        android:text="Lorem ipsum dolor sit amet, consectetuer adipiscing elit" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/card_subcaption2"
                        android:layout_marginLeft="16dp">

                        <Button
                            android:id="@+id/bt_card_share"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SHARE"
                            android:textSize="@dimen/button_font_size"
                            android:background="@android:color/transparent" />

                        <Button
                            android:id="@+id/bt_card_more"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/bt_card_share"
                            android:layout_marginLeft="16dp"
                            android:text="LEARN MORE"
                            android:textSize="@dimen/button_font_size"
                            android:background="@android:color/transparent" />
                    </RelativeLayout>
                </RelativeLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal"
                android:background="@drawable/layer_card_background">

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:paddingBottom="2dp"
                    android:paddingLeft="2dp"
                    android:src="@drawable/small_computer_science" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/title_font_size"
                        android:textColor="#757575"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:text="El Pooch" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/caption_font_size"
                        android:textColor="@color/holo_dark_gray"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:text="By Raphael Moraes" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/card_subcaption2"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="8dp">

                        <Button
                            android:id="@+id/bt_small_card_share"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SHARE"
                            android:textSize="@dimen/button_font_size"
                            android:background="@android:color/transparent" />

                        <Button
                            android:id="@+id/bt_small_card_more"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/bt_small_card_share"
                            android:layout_marginLeft="8dp"
                            android:text="LEARN MORE"
                            android:textSize="@dimen/button_font_size"
                            android:background="@android:color/transparent" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/ll_drawer_layout" />
</android.support.v4.widget.DrawerLayout>